#SQL procedures or stored procedures are a set of statements that can be saved and reused by just calling their name

#Syntax
DELIMITER &&
create procedure Procedure_name()
Begin
  Sql Query
End &&
DELIMITER ;

#Q. The search engine company wants to run a task to generate a report regarding total engagement by each language on a daily basis. 
#Please create a store procedure for the same 

DELIMITER &&
CREATE PROCEDURE total_engagement_by_language()
BEGIN
  SELECT User_language, 
         SUM(Engagement) AS Total_Engagement
  FROM User AS u
  JOIN User_Activity AS ua ON u.User_Id = ua.User_Id
  GROUP BY User_language;
END &&
DELIMITER ;


call total_engagement_by_language();
